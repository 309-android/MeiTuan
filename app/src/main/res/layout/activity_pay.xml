<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="这是地址信息"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/checkAddress_Button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/right" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consignee_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="这是收货人"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/phone_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="13712345678"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:background="@drawable/stroke"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/time_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是预计送达时间"
                    android:textColor="#F07A15"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/laba"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点餐请适量，环保又健康"
                android:textColor="#997765"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storeName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是店铺名字"
                android:textColor="#848687"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ListView
                android:id="@+id/orderFood_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/takeOutNum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="225dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/allNum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥6"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginLeft="220dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:layout_height="62dp"
        android:background="@drawable/stroke"
        android:backgroundTint="#232426"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:id="@+id/order_AmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>



        </LinearLayout>

        <Button
            android:id="@+id/toPay_Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/round_corner"
            android:text="去支付"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>