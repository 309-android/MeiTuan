<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="输入验证码"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="60dp"/>

    <!--动态显示手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="验证码已发送至"
            android:textSize="15sp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" +86 "
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/getMsgCodePhoneNumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/inputCode_EditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:maxLength="6"
        android:background="@drawable/layout_line"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seconds_TextView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="60 "
            android:layout_marginTop="35dp"
            android:layout_marginLeft="55dp"
            android:textColor="#555555"/>

        <Button
            android:id="@+id/secondGetCode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="秒后重新获取验证码"
            android:enabled="false"
            android:layout_marginTop="35dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#555555"/>

    </LinearLayout>


</LinearLayout>