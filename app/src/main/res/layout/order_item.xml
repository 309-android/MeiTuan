<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="center"
        android:orientation="vertical">


        <!--第一排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <!--店铺缩略图-->
            <ImageView
                android:id="@+id/orderStoreImage_ImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <!--店铺名字-->
            <TextView
                android:id="@+id/orderStoreName_TextView"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="店铺名字"
                android:maxEms="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold" />
            <!--订单状态-->
            <TextView
                android:id="@+id/orderStatus_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:text="订单状态"
                android:textSize="18sp" />

        </LinearLayout>

        <!--第二排-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <!--食品缩略图-->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <!--食品缩略图1 如果有-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <!--食品图片-->
                    <ImageView
                        android:id="@+id/orderFoodImageOne_ImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/orderFoodNameOne_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="食品名字"
                        android:maxEms="5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>


                </LinearLayout>
                <!--食品缩略图2 如果有-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--食品图片-->
                    <ImageView
                        android:id="@+id/orderFoodImageTwo_ImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/orderFoodNameTwo_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxEms="5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>

                </LinearLayout>
                <!--食品缩略图3 如果有-->
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--食品图片-->
                    <ImageView
                        android:id="@+id/orderFoodImageThree_ImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/orderFoodNameThree_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxEms="5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:textSize="16sp"/>

                </LinearLayout>

            </LinearLayout>

            <!--价格显示-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--订单价格-->
                <TextView
                    android:id="@+id/orderAmount_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="￥XX.XX"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <!--订单件数-->
                <TextView
                    android:id="@+id/orderNum_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共 X 件"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:text="去评价"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/round_corner"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>